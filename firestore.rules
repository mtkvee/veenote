rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedInOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function hasValidLabelName() {
      return request.resource.data.name is string
        && request.resource.data.name.size() > 0
        && request.resource.data.name.size() <= 40;
    }

    function hasValidLabelShape() {
      return request.resource.data.keys().hasOnly([
        "name",
        "createdAt",
        "updatedAt"
      ]);
    }

    function hasValidNoteShape() {
      return request.resource.data.keys().hasOnly([
        "title",
        "body",
        "labelIds",
        "labelNames",
        "labelId",
        "labelName",
        "updatedAtMs",
        "createdAt",
        "updatedAt"
      ]);
    }

    function hasValidNoteFields() {
      return request.resource.data.title is string
        && request.resource.data.title.size() > 0
        && request.resource.data.title.size() <= 120
        && request.resource.data.body is string
        && request.resource.data.body.size() > 0
        && request.resource.data.body.size() <= 20000
        && request.resource.data.labelIds is list
        && request.resource.data.labelNames is list
        && request.resource.data.labelIds.size() == request.resource.data.labelNames.size()
        && request.resource.data.labelIds.size() <= 20
        && request.resource.data.labelId is string
        && request.resource.data.labelName is string
        && request.resource.data.updatedAtMs is int;
    }

    match /users/{userId}/labels/{labelId} {
      allow read: if isSignedInOwner(userId);
      allow create, update: if isSignedInOwner(userId)
        && hasValidLabelShape()
        && hasValidLabelName();
      allow delete: if isSignedInOwner(userId);
    }

    match /users/{userId}/notes/{noteId} {
      allow read: if isSignedInOwner(userId);
      allow create, update: if isSignedInOwner(userId)
        && hasValidNoteShape()
        && hasValidNoteFields();
      allow delete: if isSignedInOwner(userId);
    }
  }
}
